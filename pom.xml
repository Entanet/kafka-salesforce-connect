            <version>1.42.2</version>
        </dependency>
        <dependency>
            <groupId>com.google.http-client</groupId>
            <artifactId>google-http-client-jackson2</artifactId>
            <version>1.42.2</version>
            <exclusions>
                <exclusion>
                    <artifactId>jackson-core</artifactId>
